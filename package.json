{
  "name": "mario3dworld",
  "version": "1.0.0",
  "description": "Mario 3d world page clone with tailwind css",
  "main": "index.js",
  "scripts": {
    "build:css": "postcss ./src/tailwind.css --o ./public/css/styles.css",
    "build": "NODE_ENV=production postcss ./src/tailwind.css --o ./public/css/styles.css",
    "dev": "nodemon -x npm run build:css -w /src/tailwind.css -w tailwind.config.js -w /public/index.html"
  },
  "author": "Armany Felix",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.3.2",
    "nodemon": "^2.0.12",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.2.7"
  }
}
